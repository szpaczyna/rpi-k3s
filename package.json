{
  "name": "rpi-k3s",
  "version": "0.0.6",
  "description": "Szpacze Gniazdo k3s",
  "main": "index.js",
  "dependencies": {
    "commitizen": "^4.2.3",
    "semantic-release": "^17.4.2"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0"
  },
  "scripts": {
    "jsonlint": "jsonlint json/*/*.json",
    "yammllint": "yamllint yaml/*",
    "shellint": "shellcheck scripts/*.sh",
    "test": "npm run jsonlint; npm run yammlint; npm run shellint",
    "release": "standard-version -i CHANGELOG.md ",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "disableScopeLowerCase": false,
      "disableSubjectLowerCase": false,
      "maxHeaderWidth": 100,
      "maxLineWidth": 100,
      "defaultType": "",
      "defaultScope": "",
      "defaultSubject": "",
      "defaultBody": "",
      "defaultIssues": "",
      "types": {
        "fix:" {
          "description": "Some kind of fix",
          "title": "Bug Fixes"
        },
        "feat": {
          "description": "A new feature",
          "title": "Features"
        },
        "lint": {
          "description": "File linting",
          "title": "Syntax polishing"
        },
        "test": {
          "description": "Playing with stuff",
          "title": "Do not take those into account"
        },
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/szpaczyna/rpi-k3s.git"
  },
  "author": "Michal 'shpaq' Laszuk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/szpaczyna/rpi-k3s/issues"
  },
  "homepage": "https://github.com/szpaczyna/rpi-k3s#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}